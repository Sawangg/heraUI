---
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";

const { title, description } = Astro.props;
---

<html lang="en" class="bg-zinc-50 font-serif antialiased dark:bg-zinc-900 dark:[color-scheme:dark]">
  <head>
    <meta charset="utf-8" />
    <meta content="light dark" name="color-scheme" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta
      name="description"
      property="og:description"
      content={description ?? "HeraUI is a next-gen UI library that integrate seamlessly in your codebase"}
    />
    <meta name="author" content="LÃ©o Mercier" />
    <meta name="copyright" content="ISC" />

    <link rel="canonical" href={Astro.url} />
    <meta content="origin" name="referrer" />

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />
    <meta name="robots" content="follow, index, max-snippet:-1, max-video-preview:-1, max-image-preview:large" />

    <meta property="og:site_name" content="HeraUI" />
    <meta property="og:title" content={title ?? "HeraUI"} />
    <meta property="og:type" content="website" />

    <title>{title ?? "HeraUI"}</title>
  </head>
  <body class="min-h-screen overflow-x-hidden selection:bg-sky-500 selection:text-white">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
